<UserControl x:Name="WMTextBox" x:Class="Medic.Tools.Kit.UI.Controls.WatermarkTextBox.WatermarkTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medic.Tools.Kit.UI.Controls.WatermarkTextBox"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250">
    <Grid GotFocus="WMTextBl_GotFocus" LostFocus="Grid_LostFocus">
        <TextBlock x:Name="WMTextBl" Margin="2"   VerticalAlignment="Center" HorizontalAlignment="Stretch" FontStyle="Italic" Height="Auto" Text="{Binding WatermarkText, ElementName=WMTextBox}" Foreground="{Binding WatermarkTextColor, ElementName=WMTextBox}"/>
        <TextBox x:Name="WMTextBx" Margin="0" Background="{x:Null}" VerticalContentAlignment="Center" Grid.IsSharedSizeScope="True" Height="Auto"/>
    </Grid>
    
</UserControl>
