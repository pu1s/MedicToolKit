<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicTools.UI.Controls.IndexMassBody"
             xmlns:LabelTextBox="clr-namespace:MedicTools.UI.Controls.LabelTextBox" x:Class="MedicTools.UI.Controls.IndexMassBody.IndexMassBody"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Margin="0,5,0,8">
    <Grid SnapsToDevicePixels="True" Margin="10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"  Content="Индекс массы тела:" FontFamily="Arial" FontSize="16" FontStyle="Italic" FontStretch="SemiExpanded" BorderThickness="0"></Label>
        <LabelTextBox:LabeltextBox Margin="0,5" Grid.Row="1"/>
        <LabelTextBox:LabeltextBox Margin="0,0,0,0" Grid.Row="2"/>
    </Grid>

</UserControl>
